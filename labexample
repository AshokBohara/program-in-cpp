#include <iostream>
using namespace std;

class Abc {
public:
    int x, y, sum;

    // Constructor to initialize the variables
    Abc() : x(0), y(0), sum(0) {}

    // Function to set the values and calculate the sum
    void setValues(int a, int b) {
        x = a;
        y = b;
        sum = x + y;
    }

    // Function to display the sum
    void display() {
        cout << "Sum: " << sum << endl;
    }
};

int main() {
    Abc obj;
    obj.setValues(4, 5); // Set values of x and y
    obj.display();       // Display the sum
    return 0;
}
